                contentType: "application/json; charset=utf-8",
                success: function (data) {


                    $("#actiId").val(""),
                    $("#selectActiId").val("0").change(),
                    $("#txtMotivo").val(""),
                    $("#txtDesarrollo").val("")
                },
                error: function (error) {
                    console.log(error)

                },
                beforeSend: function () {

                },
            });

            //$('#tabla').DataTable().ajax.reload();
            //$("#modalParticipantes").modal("hide");
        }

//------------------------------------------------------INICIO ACTIVIDAD-----------------------------------------------

    </script>
}